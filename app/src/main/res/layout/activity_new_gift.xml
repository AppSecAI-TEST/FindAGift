<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valentun.findgift.NewGiftActivity">

    <ImageView
        android:id="@+id/new_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/edit_image_background"
        android:cropToPadding="false"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_white_24dp" />

    <EditText
        android:id="@+id/new_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/name_hint"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintLeft_toLeftOf="@+id/new_image"
        app:layout_constraintRight_toRightOf="@+id/new_image"
        app:layout_constraintTop_toBottomOf="@+id/new_image" />

    <EditText
        android:id="@+id/new_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="@+id/new_name"
        app:layout_constraintRight_toRightOf="@+id/new_name"
        app:layout_constraintTop_toBottomOf="@+id/new_name"
        app:layout_constraintHorizontal_bias="0.466" />

    <Button
        android:id="@+id/create_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="15dp"
        android:text="@string/create"
        app:layout_constraintLeft_toLeftOf="@+id/new_price"
        app:layout_constraintRight_toRightOf="@+id/new_price"
        app:layout_constraintTop_toBottomOf="@+id/new_price"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
